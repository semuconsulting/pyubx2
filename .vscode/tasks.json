{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // Use the Install Build/Test Dependencies tasks to install the necessary toolchain.
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--upgrade",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfvd",
                "build",
                "dist",
                "htmlcov",
                "docs/_build",
                "${config:modulename}.egg-info",
            ],
            "windows": {
                "command": "Get-ChildItem",
                "args": [
                    "-Path",
                    "build\\,",
                    "dist\\,",
                    "htmlcov\\,",
                    "docs\\_build,",
                    "${config:modulename}.egg-info",
                    "-Recurse",
                    "|",
                    "Remove-Item",
                    "-Recurse",
                    "-Confirm:$false",
                    "-Force",
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Sort Imports",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "isort",
                "src",
                "--jobs",
                "-1"
            ],
            "problemMatcher": []
        },
        {
            "label": "Format",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "black",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Security",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "bandit",
                "-c",
                "pyproject.toml",
                "-r",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "build",
                ".",
                "--wheel",
                "--sdist",
            ],
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pytest"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx",
            "type": "process",
            "command": "sphinx-apidoc",
            "args": [
                "--ext-autodoc",
                "--ext-viewcode",
                "--templatedir=docs",
                "-f",
                "-o",
                "docs",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx HTML",
            "type": "process",
            "command": "/usr/bin/make",
            "windows": {
                "command": "${workspaceFolder}/docs/make.bat"
            },
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx Deploy to S3", // needs AWS credentials
            "type": "process",
            "command": "aws",
            "args": [
                "s3",
                "cp",
                "${workspaceFolder}/docs/_build/html",
                "s3://www.semuconsulting.com/${config:modulename}/",
                "--recursive"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx HTML"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install Locally",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--user",
                "--force-reinstall",
                "*.whl"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                "Security",
                "Sort Imports",
                "Format",
                "Pylint",
                "Test",
                "Build",
                "Sphinx HTML"
            ],
            "options": {
                "cwd": "dist"
            },
            "problemMatcher": []
        },
        {
            "label": "Benchmark",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "${workspaceFolder}/examples/benchmark.py",
            ],
            "problemMatcher": []
        },
    ]
}